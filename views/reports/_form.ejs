<div class="form-group">
  <label for="title">Title</label>
  <input type="text"
         class="form-control"
         name="title"
         value="<%= report.title %>">
</div>

<div class="form-group">
  <label for="reach">Reach</label>
  <input type="text"
         class="form-control"
         name="reach"
         value="<%= report.reach %>">
</div>

<div class="form-group">
  <label for="date">Date </label>
  <input type="date"
         class="form-control"
         name="date"
         value="<%= report.date %>">
</div>

<div class="form-group">
  <label for="level">Level</label>
  <input type="text"
         class="form-control"
         name="level"
         value="<%= report.level %>">
</div>

<div class="form-group">
  <label for="units">Units</label>
  <select name="units" value="<%= report.units %>">
  <option value="Ft">Ft</option>
  <option value="In">In</option>
  <option value="CFS">CFS</option>
  <option value="CMS">CMS</option>
  </select>
</div>

<div class="form-group">
  <label for="weather">Weather</label>
  <input type="text"
         class="form-control"
         name="weather"
         value="<%= report.weather %>">
</div>

<div class="form-group">
  <label for="beta">Beta</label>
  <input type="text"
         class="form-control beta"
         name="beta"
         value="<%= report.beta %>">
</div>
